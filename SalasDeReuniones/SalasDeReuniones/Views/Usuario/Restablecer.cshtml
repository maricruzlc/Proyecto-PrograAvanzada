@{
    ViewBag.Title = "Restablecer contraseña";
}

<style>
    /* Fondo para toda la página */
    .page-background {
        background-image: url('https://whats-up.sedus.com/wp-content/uploads/2022/06/conference-chairs.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh; /* Asegura que el fondo cubra toda la altura de la ventana */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Estilo para el formulario, para que se vea bien sobre el fondo */
    .reset-password-form {
        background-color: rgba(255, 255, 255, 0.8); /* Fondo blanco semi-transparente */
        padding: 30px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    /* Estilo para los inputs y el botón */
    .form-control {
        margin-bottom: 15px;
        width: 100%;
        padding: 10px;
    }

    button {
        width: 100%;
        padding: 10px;
    }

    .alert {
        margin-top: 15px;
    }
</style>

<div class="page-background">
    <div class="reset-password-form">
        <h2>@ViewBag.Title</h2>

        <form method="post">
            <input type="hidden" name="token" value="@Request.QueryString["token"]" />

            <div class="form-group">
                <label for="newPassword">Nueva contraseña:</label>
                <input type="password" id="newPassword" name="newPassword" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmar contraseña:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Restablecer</button>
        </form>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success">@TempData["Mensaje"]</div>
        }
    </div>
</div>
